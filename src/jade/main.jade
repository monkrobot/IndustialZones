extends ./templates/base_template.jade
block content
    div.contentMain
        div.content_blockEntrance
            div.blockEntrance_content
                div.blockEntrance_enterLogin
                    input(type="text")
                div.blockEntrance_enterPassword
                    input(type="password")
                div.blockEntrance_forgetPassword
                    p Забыли пароль?
                div.blockEntrance_buttonEntrance
                    p Войти
        div.content_blockRegistration
            //.hide-element-lg.hide-element-md.hide-element-sm.hide-element-xs
            div.blockRegistration_header
                div.blockRegistration_buttonCancel

                div.blockRegistration_name
                    p Регистрация

            div.blockRegistration_wrapperContent
                div.blockRegistration_content
                    div.blockRegistration_whoAreYou
                        div.blockRegistration_form
                            form(name="registration" method="post" action="registration.php")
                                div.blockRegistration_inputPerson.blockRegistration_commonClass
                                    input(type="radio" name="whoAreYou" value="person")
                                    = 'Физическое лицо'
                                div.blockRegistration_inputLegalEntity.blockRegistration_commonClass
                                    input(type="radio" name="whoAreYou" value="legalEntity")
                                    = 'Юридическое лицо'
                                div.blockRegistration_inputStateExecuter.blockRegistration_commonClass
                                    input(type="radio" name="whoAreYou" value="stateExecuter")
                                    = 'ИОГВ'

                        div.blockRegistration_person
                            //.hide-element-lg.hide-element-md.hide-element-sm.hide-element-xs

                            div.blockRegistration_enterYourName
                                div.blockRegistration_Surname.blockRegistration_commonClass
                                    //.hide-element-lg.hide-element-md.hide-element-sm.hide-element-xs
                                    p Фамилия
                                    input(class ="inputText" type="text")
                                div.blockRegistration__Name.blockRegistration_commonClass
                                    p Имя
                                    input(class ="inputText" type="text")
                                div.blockRegistration_patronymic.blockRegistration_commonClass
                                    p Отчество
                                    input(class ="inputText" type="text")
                            div.blockRegistration_document
                                form(name="registration" method="post" action="registration.php")
                                    div.blockRegistration_inputPassport.blockRegistration_commonClass
                                        input(type="radio" name="document" value="passport")
                                        = 'Паспортные данные'
                                    div.blockRegistration_inputInn.blockRegistration_commonClass
                                        input(type="radio" name="document" value="inn")
                                        = 'ИНН'
                            div.blockRegistration_documentData
                                div.blockRegistration_passport
                                    //.hide-element-lg.hide-element-md.hide-element-sm.hide-element-xs
                                    div.blockRegistration_passportSeria.blockRegistration_commonClass
                                        p Серия паспорта
                                        input(class ="inputText" type="text")
                                    div.blockRegistration_passportNumber.blockRegistration_commonClass
                                        p Номер паспорта
                                        input(class ="inputText" type="text")
                                div.blockRegistration_inn
                                    //.hide-element-lg.hide-element-md.hide-element-sm.hide-element-xs
                                    div.blockRegistration_innNumber.blockRegistration_commonClass
                                        p Номер ИНН
                                        input(class ="inputText" type="text")


                        div.blockRegistration_legalEntity

                            div.blockRegistration_organizationInformation
                                div.blockRegistration_organizationName.blockRegistration_commonClass
                                    p Наименование
                                    input(class ="inputText" type="text")

                                div.blockRegistration_registrationNumber.blockRegistration_commonClass
                                    p Номер свидетельства о регистрации
                                    input(class ="inputText" type="text")
                        div.blockRegistration_stateExecuter

                            div.blockRegistration_stateExecuterInformation
                                div.blockRegistration_stateExecuterName.blockRegistration_commonClass
                                    p Наименование ИОГВ
                                    input(class ="inputText" type="text")

                                div.blockRegistration_stateExecuterPerformer.blockRegistration_commonClass
                                    p Должность специалиста
                                    input(class ="inputText" type="text")
                        div.blockRegistration_wrapperEmail
                            .blockRegistration_email.blockRegistration_commonClass
                                p Электронная почта
                                input(class ="inputText" type="text")
                        div.blockRegistration_wrapperButtonSend
                            div.blockRegistration_buttonSend
                                p Отправить