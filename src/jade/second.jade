            -description.push({name:'Технические возможности подключения:', nameContent:'#'});
            -description.push({name:'Водоснабжение:', nameContent:'#'});
            -description.push({name:'Водоотведение:', nameContent:'#'});
            -description.push({name:'Теплоснабжение:', nameContent:'#'});
            -description.push({name:'Электроснабжение:', nameContent:'#'});
            -description.push({name:'Газоснабжение:', nameContent:'#'});
            -description.push({name:'Градостроительные преобразования:', nameContent:'#'});
            -description.push({name:'Сроки реализации:', nameContent:'#'});

               each item in description

                  div.objectDescription_itemHeader
                     p!= item.name
                  div.objectDescription_itemContent
                     p!= item.nameContent

         div.objectDescription_buttons
