extends ./templates/base_template.jade
block content
   div.contentSecond
      div.content_blockSearch
         div.blockSearch_wrapperSearch
            div.blockSearch_search
               form
                  input(type="search" name="search" placeholder="")
                  //input(type="submit" value="Поиск")
               div.blockSearch_buttonSearch
                  div.blockSearch_button
                     p ПОИСК

         div.blockSearch_content

            div.blockSearch_raw
               div.blockSearch_priorityArea.blockSearch_blocks
                  p Приоритетный район:
                  div.blockSearch_select
                     div.blockSearch_selectText
                        p Приоритетные районы(2)
                     div.blockSearch_selectImg
                        img(id="selectImgBottom" src="../images/svg/greyTriangleBottom.svg")
                        img(id="selectImgTop" src="../images/svg/greyTriangleTop.svg")
                     div.blockSearch_selectItem
                        input(type="checkbox" name="1")
                        ="Конная Лахта"
                        br
                        input(type="checkbox" name="2")
                        ="Красносельский"

               div.blockSearch_typeOfUse.blockSearch_blocks
                  p Вид разрешенного использования:
                  div.blockSearch_select
                     div.blockSearch_selectText
                        p Выберите вид разрешенного использования
                        div.blockSearch_selectItem
                           input(type="checkbox" name="1")
                           ="1"
                           br
                           input(type="checkbox" name="2")
                           ="2"
                     div.blockSearch_selectImg
                        img(id="selectImgBottom" src="../images/svg/greyTriangleBottom.svg")
                        img(id="selectImgTop" src="../images/svg/greyTriangleTop.svg")

               div.blockSearch_classOfDanger.blockSearch_blocks
                  p Класс опасности производства:
                  div.blockSearch_select
                     div.blockSearch_selectText
                        p Выберите класс опасности производства
                        div.blockSearch_selectItem
                           input(type="checkbox" name="1")
                           ="1"
                           br
                           input(type="checkbox" name="2")
                           ="2"
                     div.blockSearch_selectImg
                        img(id="selectImgBottom" src="../images/svg/greyTriangleBottom.svg")
                        img(id="selectImgTop" src="../images/svg/greyTriangleTop.svg")

            div.blockSearch_raw
               div.blockSearch_square.blockSearch_blocks
                  p Площадь ЗУ:
                  div.blockSearch_quantityOfSquare.blockSearch_quantity
                     form(name="quantityOfSquare" method="post" action="search.php")
                        p от
                        input(type="text" size="3")
                        p до
                        input(type="text" size="3")
                        p м.кв

               div.blockSearch_gasification.blockSearch_blocks
                  p Газоснабжение:
                  div.blockSearch_quantityOfGas.blockSearch_quantity
                     form(name="quantityOfGas" method="post" action="search.php")
                        p от
                        input(type="text" size="3")
                        p до
                        input(type="text" size="3")
                        p м.куб./сутки

               div.blockSearch_waterSupply.blockSearch_blocks
                  p Водоснабжение:
                  div.blockSearch_quantityOfWater.blockSearch_quantity
                     form(name="quantityOfWater" method="post" action="search.php")
                        p от
                        input(type="text" size="3")
                        p до
                        input(type="text" size="3")
                        p м.куб./сутки

            div.blockSearch_raw
               //водоотведение
               div.blockSearch_severage.blockSearch_blocks
                  p Водоотведение:
                  div.blockSearch_quantityOfSeverage.blockSearch_quantity
                     form(name="quantityOfSeverage" method="post" action="search.php")
                        p от
                        input(type="text" size="3")
                        p до
                        input(type="text" size="3")
                        p м.куб./сутки

               div.blockSearch_heatSupply.blockSearch_blocks
                  p Теплоснабжение
                  div.blockSearch_quantityOfHeat.blockSearch_quantity
                     form(name="quantityOfHeat" method="post" action="search.php")
                        p от
                        input(type="text" size="3")
                        p до
                        input(type="text" size="3")
                        p Гкал/час

               div.blockSearch_electricitySupply.blockSearch_blocks
                  p Электроснабжение
                  div.blockSearch_quantityOfElectricity.blockSearch_quantity
                     form(name="quantityOfElectricity" method="post" action="search.php")
                        p от
                        input(type="text" size="3")
                        p до
                        input(type="text" size="3")
                        p кВт

      div.content_blockMap

         div.content_map
            //img(src="../images/gerb_spb.jpg" width="400px")
            canvas

         div.content_blockSidebar
            div.content_sidebar
               div.sidebar_upperButtons
                  div.sidebar_angleTopButton.sidebarButtons
                     img(src="../images/angleTop.gif")
                     //img(src="../images/svg/angleBottom.svg")
                     div.angleTop_comment.sidebar_comment
                        p Свернуть панель инструментов
                  div.sidebar_industrialZonesBordersButton.sidebarButtons
                     div.industrialZonesBorders_comment.sidebar_comment
                        p Отображение границ промышленных зон
                     img(src="../images/svg/industrialZonesBorders.svg")
                  div.sidebar_sectionsButton.sidebarButtons
                     div.sections_comment.sidebar_comment
                        p Отображение земельных участков внутри границ промышленных зон
                     img(src="../images/svg/sections.svg")
                  div.sidebar_redactorButton.sidebarButtons
                     div.redactor_comment.sidebar_comment
                        p Редактирование информации о выбранном земельном участке
                     img(src="../images/svg/redactor.svg")
                  div.sidebar_trashButton.sidebarButtons
                     div.trash_comment.sidebar_comment
                        p Удаление выбранного объекта
                     img(src="../images/svg/trash.svg")
                  div.sidebar_lineChangingButton.sidebarButtons
                     div.lineChanging_comment.sidebar_comment
                        p Изменение котуров промышленных зон/земельных участков
                     img(src="../images/svg/lineChanging.svg")
                  div.sidebar_fotoButton.sidebarButtons
                     div.foto_comment.sidebar_comment
                        p Фотофиксация данных об объектах
                     img(src="../images/svg/foto.svg")

               div.sidebar_bottomButtons
                  div.sidebar_legendButton.sidebarButtons
                     div.legend_comment.sidebar_comment
                        p Легенда карты
                     img(src="../images/svg/legend.svg")

            div.information_objectName
               p Конная Лахта
            div.information_objectAdress
               p СПб, ул. Электропультовцев, д. 7, литера У
            div.information_wrapperObjectInformation
               div.information_buttonClose
                  img(src="../images/svg/whiteCloseX.svg")
               div.information_objectInformation
                  div.information_objectInformationArrow
                     img(src="../images/svg/triangleBottom.svg")
                     //img(src="../images/svg/triangleTop.svg")
                  div.information_objectInformationText
                     p Информация о найденных объектах

               -var information = [];
               -information.push({number:'1', area:'Конная Лахта', adress:'СПб, ул.Электропультовцев, д.7, литера У', more:'#'});
               -information.push({number:'2', area:'Конная Лахта', adress:'СПб, ул.Электропультовцев, д.7, литера У', more:'#'});
               each item in information

                  div.information_list
                     div.information_wrapperNumberContent
                        div.information_wrapperListNumber
                           div.information_listNumber
                              p!= item.number
                        div.information_listContent
                           div.information_listArea
                              p!= 'Район: ' + item.area
                           div.information_listAdress
                              p!= 'Адрес: ' + item.adress
                     div.information_listMore
                        a(href!= item.more) Подробнее

      div.content_objectDescription
         div.objectDescription_header
            p Подробное описание выбранного обьекта

         div.objectDescription_content
            -var description = [];
            -description.push({name:'Район:', nameContent:'#'});
            -description.push({name:'Адрес:', nameContent:'#'});
            -description.push({name:'Кадастровый номер:', nameContent:'#'});
            -description.push({name:'Вид разрешенного использования:', nameContent:'#'});
            -description.push({name:'Правообладатель:', nameContent:'#'});
            -description.push({name:'Вид деятельности (для участков в частной собственности):', nameContent:'#'});
            -description.push({name:'Основание(для участков в частной собственности):', nameContent:'#'});
            -description.push({name:'Технические возможности подключения:', nameContent:'#'});
            -description.push({name:'Водоснабжение:', nameContent:'#'});
            -description.push({name:'Водоотведение:', nameContent:'#'});
            -description.push({name:'Теплоснабжение:', nameContent:'#'});
            -description.push({name:'Электроснабжение:', nameContent:'#'});
            -description.push({name:'Газоснабжение:', nameContent:'#'});
            -description.push({name:'Градостроительные преобразования:', nameContent:'#'});
            -description.push({name:'Сроки реализации:', nameContent:'#'});

               each item in description

                  div.objectDescription_itemHeader
                     p!= item.name
                  div.objectDescription_itemContent
                     p!= item.nameContent

         div.objectDescription_buttons
            div.objectDescription_buttonReference.objectDescription_bottomButtons
               p Заказать справку
            div.objectDescription_buttonEditing.objectDescription_bottomButtons
               p Редактировать

      div.content_objectDescription
         div.objectDescription_header
            p Редактирование описания выбранного объекта

         div.objectDescription_content

            div.objectDescription_itemHeader
               p Район:
            div.objectDescription_itemContent
               form(name="district" method="post" action="objectDescription.php")
                  input(type="text" size="20")

            div.objectDescription_itemHeader
               p Адрес:
            div.objectDescription_itemContent
               form(name="address" method="post" action="objectDescription.php")
                  input(type="text" size="40")

            div.objectDescription_itemHeader
               p Кадастровый номер:
            div.objectDescription_itemContent
               form(name="cadastralNumber" method="post" action="objectDescription.php")
                  input(type="text" size="20")

            div.objectDescription_itemHeader
               p Вид разрешенного использования:
            div.objectDescription_itemContent
               form(name="typeOfUse" method="post" action="objectDescription.php")
                  input(type="text" size="40")

            div.objectDescription_itemHeader
               p Правообладатель:
            div.objectDescription_itemContent
               form(name="rightholder" method="post" action="objectDescription.php")
                  input(type="text" size="40")

            div.objectDescription_itemHeader
               p Вид деятельности (для участков в частной собственности):
            div.objectDescription_itemContent
               form(name="kindOfActivity" method="post" action="objectDescription.php")
                  input(type="text" size="40")

            div.objectDescription_itemHeader
               p Основание(для участков в частной собственности):
            div.objectDescription_itemContent
               form(name="basis" method="post" action="objectDescription.php")
                  input(type="text" size="40")

            div.objectDescription_itemHeader
               p Технические возможности подключения:
            div.objectDescription_itemContent
               form(name="opportunityOfConnection" method="post" action="objectDescription.php")
                  textarea(cols="40" rows="2")

            div.objectDescription_itemHeader
               p Водоснабжение:
            div.objectDescription_itemContent
               form(name="waterSupply" method="post" action="objectDescription.php")
                  input(type="text" size="7")
                  input(type="text" size="7")
                  p предусматривается от системы централизованного водоснабжения.

            div.objectDescription_itemHeader
               p Водоотведение:
            div.objectDescription_itemContent
               form(name="severage" method="post" action="objectDescription.php")
                  finput(type="text" size="7")
                  finput(type="text" size="7")
                  fp предусматривается в систему централизованной канализации.

            div.objectDescription_itemHeader
               p Теплоснабжение:
            div.objectDescription_itemContent
               form(name="heatSupply" method="post" action="objectDescription.php")
                  input(type="text" size="7")
                  input(type="text" size="7")
                  p предусматривается от планируемых к строительству источников теплоснабжения.

            div.objectDescription_itemHeader
               p Электроснабжение:
            div.objectDescription_itemContent
               form(name="electricitySupply" method="post" action="objectDescription.php")
                  input(type="text" size="7")
                  input(type="text" size="7")
                  p предусматривается от системы централизованного электроснабжения.

            div.objectDescription_itemHeader
               p Газоснабжение:
            div.objectDescription_itemContent
               form(name="gasification" method="post" action="objectDescription.php")
                  input(type="text" size="7")
                  input(type="text" size="7")
                  p предусматривается от городской газораспределительной сети.

            div.objectDescription_itemHeader
               p Градостроительные преобразования:
            div.objectDescription_itemContent
               form(name="Town-planningTransformations" method="post" action="objectDescription.php")
                  input(type="text" size="40")

            div.objectDescription_itemHeader
               p Сроки реализации:
            div.objectDescription_itemContent
               form(name="dates" method="post" action="objectDescription.php")
                  input(type="text" size="10")
                  p  -
                  input(type="text" size="10")

         div.objectDescription_buttons
            div.objectDescription_buttonPublish.objectDescription_bottomButtons
               div.publication
                  p Опубликовать
            div.objectDescription_buttonSave.objectDescription_bottomButtons
               p Сохранить