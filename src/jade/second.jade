            div.information_objectName
               p Конная Лахта
            div.information_objectAdress
               p СПб, ул. Электропультовцев, д. 7, литера У
            div.information_wrapperObjectInformation
               div.information_buttonClose
                  img(src="../images/svg/whiteCloseX.svg")
               div.information_objectInformation
                  div.information_objectInformationArrow
                     img(src="../images/svg/triangleBottom.svg")
                  div.information_objectInformationText
                     p Информация о найденных объектах

               -var information = [];
               -information.push({number:'1', area:'Конная Лахта', adress:'СПб, ул.Электропультовцев, д.7, литера У', more:'#'});
