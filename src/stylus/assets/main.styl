//.content_blockEntrance
.content_blockEntrance
  width 20%
  box-shadow  0 0 7px rgba(0,0,0,0.5)

.blockEntrance_content
  width 80%
  margin 0 auto
  padding 2% 0
  text-align right

.blockEntrance_enterLogin, .blockEntrance_enterPassword
  margin 3% 0 0 0
  input
    width 100%

.blockEntrance_forgetPassword
  margin 3% 0 0 0
  text-decoration underline
  font-size 80%

  p
    cursor pointer

.blockEntrance_buttonEntrance
  cursor pointer
  width 60%
  margin 3% auto
  text-align center
  background-color #29ABE2
  color #ffffff
  box-shadow  0 0 3px rgba(0,0,0,0.5)
  padding 3% 0

//.content_blockRegistration

.blockRegistration_commonClass
  width 33.3%
  //text-align left

.content_blockRegistration
  width 50%
  margin 1% auto
  box-shadow  0 0 7px rgba(0,0,0,0.5)

  .blockRegistration_header
    background-color #29ABE2
    color #ffffff

    .blockRegistration_name
      text-align center

      p
        font-size 3em

  .blockRegistration_wrapperContent
    width 90%
    margin 3% auto

    .blockRegistration_whoAreYou
      text-align center

      .blockRegistration_form
        //display flex
        //justify-content center

        form
          display flex
          width 100%
          justify-content left
          text-align left

    .blockRegistration_enterYourName
      display flex
      justify-content left

      .blockRegistration_Surname, .blockRegistration__Name, .blockRegistration_patronymic
        text-align left
        //flex-basis 32%
        margin 0 1%

        input
          width 85%

    .blockRegistration_document
      text-align left
      margin 3% 0 0 0

      form
        display flex
        justify-content left

    .blockRegistration_passport, .blockRegistration_inn
      //margin 0
      display flex
      justify-content left

      .blockRegistration_passportSeria, .blockRegistration_passportNumber, .blockRegistration_innNumber
        text-align left
        //flex-basis 32%
        margin 0 1%

        input
          width 85%



.blockRegistration_organizationInformation
  display flex
  justify-content left

  .blockRegistration_organizationName, .blockRegistration_registrationNumber
    text-align left
    //flex-basis 45%
    margin 0 1.2%

    input
      width 85%

.blockRegistration_stateExecuterInformation
  display flex
  justify-content left

  .blockRegistration_stateExecuterName, .blockRegistration_stateExecuterPerformer
    text-align left
    //flex-basis 45%
    margin 0 1.2%

    //input
    //  width 85%

.blockRegistration_wrapperEmail
  margin-top 3%
  display flex

  .blockRegistration_email
    text-align left
    flex-basis 32%
    margin 0 auto 20px 1.2%

.blockRegistration_wrapperButtonSend
  padding-bottom 3%

  .blockRegistration_buttonSend
    cursor pointer
    width 30%
    margin 0 auto
    padding 1.5% 0
    background-color #29ABE2
    box-shadow  0 0 3px rgba(0,0,0,0.7)
    color #ffffff
    text-align center

