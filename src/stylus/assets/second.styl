//.content_blockSearch
.content_blockSearch
  padding-bottom 3%
  box-shadow  0 3px 4px rgba(0,0,0,0.5)


  .blockSearch_wrapperSearch
    width 40%
    padding 3% 0
    margin 0 auto

  .blockSearch_search
    display flex
    //justify-content center
    //heigth 100px
    //text-align center

    form
      width 70%
      input
        width 100%
        height 100%

    .blockSearch_buttonSearch
      width 30%
      background-color #29ABE2
      .blockSearch_button
        text-align center
        height 100%
        color #ffffff
        cursor pointer

        p
          margin 3% 0

//.content_blockSearch.blockSearch_content
.blockSearch_content
  width 85%
  margin 0 auto
  //display flex
  //justify-content center

  .blockSearch_raw
    display table
    width 100%

  .blockSearch_blocks //.blockSearch_priorityArea, .blockSearch_square, .blockSearch_severage, .blockSearch_typeOfUse, .blockSearch_gasification, .blockSearch_heatSupply, .blockSearch_classOfDanger, .blockSearch_waterSupply, .blockSearch_electricitySupply
    display table-cell
    width 33%
    background-color rgba(1,1,1,0.05)
    //margin 4px 2px
    border 2px solid #ffffff
    padding 1%

  .blockSearch_quantity //.blockSearch_quantityOfSquare, .blockSearch_quantityOfSeverage, .blockSearch_quantityOfGas, .blockSearch_quantityOfHeat, .blockSearch_quantityOfWater, .blockSearch_quantityOfElectricity
    margin-top 2%
    p, form
      25%
      display inline-block

  .blockSearch_select,.blockSearch_selectItem
    background-color #ffffff
    padding-left 1%
    border 1px solid #000000


  .blockSearch_select
    width 75%
    margin-top 2%
    position relative
    cursor pointer

  .blockSearch_selectItem
    position absolute
    width 99%
    top 105%
    left -0.3%
    display none
    box-shadow  0 0 7px rgba(0,0,0,0.5)

    input
      color #29ABE2

  .blockSearch_selectText
    display inline-block
    width 90%

  .blockSearch_selectImg
    display inline-block
    width 7%
    text-align right
    img
      vertical-align middle
      //padding-bottom 15%

  #selectImgTop
    display none

  .blockSearch_select:hover .blockSearch_selectItem
    display block

  .blockSearch_select:hover #selectImgTop
    display inline-block

  .blockSearch_select:hover #selectImgBottom
    display none

