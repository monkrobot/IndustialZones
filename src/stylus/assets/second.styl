.content_sidebar
  top -120px
  z-index 2
  width 70px
  margin 0 3%
  box-shadow  0 0 7px rgba(0,0,0,0.5)
  vertical-align middle

.sidebarButtons
  text-align center

.content_objectDescription
  width 90%
  margin 2% auto
  border-bottom 2px solid #000

.objectDescription_header
  border-bottom 2px solid #000
  padding-left 5%
  font-size 1.5em
  font-weight bold

.objectDescription_itemHeader
  margin-left 5%
  font-weight bold

.objectDescription_itemContent
  margin-left 10%

.objectDescription_buttons
  width 35%
  margin 2% auto

  .objectDescription_buttonReference, .objectDescription_Editing
    display inline-block
    width 40%
    margin 0 auto
    text-align center
    color #ffffff
    background-color #00bbfa
    p
      margin 3%