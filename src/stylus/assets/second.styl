//.content_blockSidebarInformation
.content_blockSidebarInformation
  display flex
  justify-content space-around
  align-items flex-start
  top -550px
  z-index 2

  .content_sidebar
    z-index 2
    width 70px
    margin 0 3%
    box-shadow  0 0 7px rgba(0,0,0,0.5)

